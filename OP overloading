#include<iostream>
using namespace std;
class complex 
{
private:

float real;
float imag;
public:
complex() 
{
real=0;
imag=0;
}
complex(float r,float i) 
{
real=r;
imag=i;
}
~complex() 
{
}
complex operator+(complex c) 
{
float r=real+c.real;
float i=imag+c.imag;
return(complex(r,i));
}
complex operator-(complex c) 
{
float r=real-c.real;
float i=imag-c.imag;
return(complex(r,i));
}
complex operator*(complex c) 
{
float r=real*c.real-imag*c.imag;
float i=real*c.imag+imag*c.real;
return(complex(r,i));
}
void display(void) 
{cout << real << "+" << imag << "i" << endl;
}
};
int main()
{
complex c1(6,4),c2(4,3);
cout << "first complex number:";
c1.display();
cout << "second complex number:";
c2.display();
complex sum=c1+c2;
cout << "addition:";
sum.display();
complex diff=c1-c2;
cout << "differance:";
diff.display();
complex prod=c1*c2;
cout <<"multiplication:";
prod.display();
return(0);
}
