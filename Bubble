#include<iostream>
using namespace std;
void bubble_sort(int a[],int n);
int main()
{
int a[20],n;
cout<<"how many elements:";
cin>>n;
cout<<"enter unsorted list:";
for(int i=0;i<n;i++)
cin>>a[i];
cout<<"original unsorted list:";
for(int i=0;i<n;i++)
cout<<"\t"<<a[i];
bubble_sort(a,n);
cout<<"\n"<<"sorted list is:";
for(int i=0;i<n;i++)
cout<<"\t"<<a[i];
return(0);
}
void bubble_sort(int a[],int n)
{
for(int i=0;i<n-1;i++)
{
for(int j=0;j<n-1;j++)
{
if(a[j]>a[j+1])
{
int temp=a[j];
a[j]=a[j+1];
a[j+1]=temp;
}
}
}
}
